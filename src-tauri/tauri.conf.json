{
  "productName": "scratchpad",
  "version": "0.0.0",
  "identifier": "com.kisaragihiu.scratchpad",
  "build": {
    "beforeDevCommand": "make dev.src",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "make build.src",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "scratchpad",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
